# Supabase Configuration
# URL of your Supabase project (e.g., https://xxxx.supabase.co)
SUPABASE_URL=
# Public/anon key for Supabase client access
SUPABASE_ANON_KEY=
# Service role key (backend only, keep secret!)
SUPABASE_SERVICE_ROLE_KEY=

# OpenAI Configuration
# Secret API key for OpenAI
OPENAI_API_KEY=
# Optional overrides
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.7
OPENAI_SENTIMENT_MAX_TOKENS=200
OPENAI_INSIGHTS_MAX_TOKENS=1200

# Stripe Configuration
# Frontend publishable key (also set VITE_STRIPE_PUBLISHABLE_KEY in frontend/.env)
STRIPE_PUBLISHABLE_KEY=
# Secret key for server-side Stripe API
STRIPE_SECRET_KEY=
# Webhook signing secret from Stripe Dashboard
STRIPE_WEBHOOK_SECRET=
# Optional: price IDs mapped to internal plan names
STRIPE_PRICE_PRO_MONTHLY=
STRIPE_PRICE_BUSINESS_MONTHLY=

# Backend/Frontend URLs
# Public backend URL (used in docs or other tools)
BACKEND_URL=
# Primary frontend origin (used as CORS fallback when list not provided)
FRONTEND_URL=
# Comma-separated list of allowed CORS origins for the API
CORS_ALLOW_ORIGINS=

# Database Configuration (if you later use a direct DB)
DATABASE_URL=

# JWT Configuration
# Secret used to sign JWTs (required)
JWT_SECRET_KEY=
# Algorithm (default HS256)
JWT_ALGORITHM=HS256
# Token lifetime in minutes
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration (optional, for automations/workflows)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=


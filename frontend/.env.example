########################################
# Frontend Environment Configuration   #
# Rename this file to `.env` and fill  #
# in values. All keys are required.    #
########################################

# App
# Human-readable name shown in UI and metadata
VITE_APP_NAME=SalesVision XAI-360
# Base URL of the frontend (used for CORS, redirects)
VITE_FRONTEND_URL=http://localhost:5173
# Default locale and supported locales (comma-separated)
VITE_DEFAULT_LOCALE=en
VITE_SUPPORTED_LOCALES=en,ar

# API
# Backend API base URL (no trailing slash)
VITE_API_URL=http://localhost:8000

# Supabase
# Found in Supabase project settings
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=

# Stripe (optional unless payments enabled)
VITE_STRIPE_PUBLISHABLE_KEY=

# OAuth Provider Client IDs (used via Supabase OAuth)
# Ensure corresponding secrets are configured in Supabase dashboard
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
